# PyPI configuration file example
# Copy this file to ~/.pypirc and fill in your credentials
# 
# For PyPI:
#   - Get your API token from https://pypi.org/manage/account/token/
#   - Use __token__ as username and your token as password
#
# For TestPyPI:
#   - Get your API token from https://test.pypi.org/manage/account/token/
#   - Use __token__ as username and your token as password

[distutils]
index-servers =
    pypi
    testpypi

[pypi]
username = __token__
password = your_pypi_api_token_here

[testpypi]
repository = https://test.pypi.org/legacy/
username = __token__
password = your_testpypi_api_token_here

